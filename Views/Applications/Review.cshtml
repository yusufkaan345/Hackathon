@model Transportathon.Models.Review

<h2>Create a Review</h2>
<p>User ID: @ViewBag.UserId</p>
<form asp-action="Review" method="post">
    <div class="form-group">
        <label for="RatingFast">Rating for Fast:</label>
        <input type="number" class="form-control" asp-for="RatingFast" min="1" max="10" />
        <span asp-validation-for="RatingFast" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ProductDurability">Rating for Product Durability:</label>
        <input type="number" class="form-control" asp-for="ProductDurability" min="1" max="10" />
        <span asp-validation-for="ProductDurability" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ServiceSatisfaction">Rating for Service Satisfaction:</label>
        <input type="number" class="form-control" asp-for="ServiceSatisfaction" min="1" max="10" />
        <span asp-validation-for="ServiceSatisfaction" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="Comment">Comment:</label>
        <textarea class="form-control" asp-for="Comment"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <input type="hidden" name="DriverId" value="@ViewBag.DriverId" />
    <input type="hidden" name="UserId" value="@ViewBag.UserId" />

    <input type="submit" value="Submit" class="btn btn-primary mt-2" />
</form>