@model List<Review>

@if (Model.Count == 0)
{
    <p>Henüz bu driver ile ilgili bir inceleme yok.</p>
}
else
{
    <div class="row">
        @foreach (var review in Model)
        {
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">UserName: @review.UserId </h5>

                        <p class="card-title">Rating: @review.RatingFast / 10</p>
                        <p class="card-text">Product Durability: @review.ProductDurability / 10</p>
                        <p class="card-text">Service Satisfaction: @review.ServiceSatisfaction / 10</p>
                        <p class="card-text">Comment: @review.Comment</p>
                    </div>
                </div>
            </div>
        }
    </div>
}





