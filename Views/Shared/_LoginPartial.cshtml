@using Microsoft.AspNetCore.Identity
@using Transportathon.Areas.Identity.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav me-3">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item mx-2">
        <a id="manage" class="nav-link border border-success text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User!)</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-danger text-light border-0">Log Out</button>
        </form>
    </li>
}
else
{
    <li class="nav-item mx-2">
        <a class="btn btn-success text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class=" btn btn-outline-primary text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
