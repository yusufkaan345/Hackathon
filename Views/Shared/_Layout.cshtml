
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Transportathon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Transportathon.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-success border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Transportathon</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item ">
                           
                            <a class="nav-link text-light btn  px-3" asp-area="" asp-controller="Home" asp-action="Index"> <i class="fa-solid fa-house" style="color: #8dd4f7;"></i> Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (@ViewBag.UserRole == "customer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light  px-3" asp-area="" asp-controller="Job" asp-action="Createjob"> <i class="fa-solid fa-plus" style="color: #6deeec;"></i> Create Job</a>
                                </li>
                            }
                           
                            <li class="nav-item">
                                <a class="nav-link btn   text-light px-3 ms-2" asp-area="" asp-controller="Job" asp-action="Publishedjob"> <i class="fa-solid fa-store" style="color: #79e6da;"></i> Job Store</a>
                            </li>
                           
                        }
                    
                            </ul>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item mr-10">
                                <a class="nav-link  text-light btn  px-3 me-3" asp-area="" asp-controller="Messages" asp-action="Messageview"> <i class="fa-solid fa-message" style="color: #72c5ee;"></i> My Messages</a>
                            </li>
                        </ul>                    
                        @if (@ViewBag.UserRole == "customer")
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item mr-10">
                                    <a class="nav-link  text-light btn  px-3" asp-area="" asp-controller="Applications" asp-action="Myjobs"> <i class="fa-solid fa-user" style="color: #7cc1fd;"></i> My Jobs</a>
                                </li>
                            </ul>
                        }
                        @if (@ViewBag.UserRole == "driver")
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item mr-10">
                                    <a class="nav-link  text-light  btn btn-primary px-3" asp-area="" asp-controller="Applications" asp-action="Myapplications"> <i class="fa-solid fa-user" style="color: #7cc1fd;"></i> My Applications</a>
                                </li>
                            </ul>
                        }
                    }
                   
                   
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


